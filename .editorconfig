# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = crlf
insert_final_newline = true

# Tab indentation (no size specified)
[*.txt]
indent_style = space

[*.{c,h,cpp,hpp}]
indent_size = 4